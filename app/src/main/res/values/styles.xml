<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>


        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>


        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--List Cards-->
    <style name="CardView.Styles.Title" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/list_card_text_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/list_card_text_size_title</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/theme_primary_text_dark_transparent</item>
    </style>

    <style name="CardView.Styles.Date" parent="CardView.Styles.Title">
        <item name="android:padding">@dimen/list_card_text_padding</item>
        <item name="android:textColor">@color/theme_primary_text_dark</item>
        <item name="android:textSize">@dimen/list_card_text_size_date</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="FAB" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>


</resources>
